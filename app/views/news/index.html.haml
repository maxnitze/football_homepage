- provide(:title, t('.news'))

.news
  .news-index
    - if permitted_to_create_news?
      %span.nav.btn-group.btn-group-xs
        = link_to t('.new_news'), new_news_path, class: 'btn btn-default', role: 'button'
      %hr

    - if @news.empty?
      = render 'no_news'
    - else
      - @news.each_with_index do |news, i|
        - if i != 0
          %hr
        = render 'news_index', news: news
        = render 'tags/tags', tags: news.tag_list

%br

= paginate @news, left: 3, right: 3, theme: 'twitter-bootstrap-3', pagination_class: 'pagination-sm custom-pagination'
