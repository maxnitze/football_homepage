%span.nav.btn-group.btn-group-xs
  - if action.eql? :index
    - if permitted_to_create_news?
      = link_to t('.new_news'), new_news_path, class: 'btn btn-default', role: 'button'
  - else
    = link_to t('.news_index'), news_index_path, class: 'btn btn-default', role: 'button'
    - if action.eql? :edit
      = link_to t('.show_news'), @news, class: 'btn btn-default', role: 'button'
      = link_to t('.save_news'), '#', class: 'btn btn-default', role: 'button',onclick: "submit_form(event, 'edit_news_#{@news.id}')"
    - elsif action.eql? :new
      = link_to t('.create_news'), '#', class: 'btn btn-default', role: 'button', onclick: "submit_form(event, 'new_news')"
    - elsif action.eql? :show
      - if permitted_to_edit_news? @news
        = link_to t('.edit_news'), edit_news_path(@news), class: 'btn btn-default', role: 'button'
