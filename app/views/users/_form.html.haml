= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :surname
    = f.text_field :surname
  .field
    = f.label :givenname
    = f.text_field :givenname
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
