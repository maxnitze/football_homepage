= form_for @referee do |f|
  - if @referee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@referee.errors.count, "error")} prohibited this referee from being saved:"
      %ul
        - @referee.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :surname
    = f.text_field :surname
  .field
    = f.label :givenname
    = f.text_field :givenname
  .field
    = f.label :clubid
    = f.number_field :clubid
  .actions
    = f.submit 'Save'
