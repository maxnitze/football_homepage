= simple_form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :name
  .field
    = f.input :ishometeam
  .field
    = f.input :hometeamname
  .field
    = f.input :isfemale
  .field
    = f.input :class_id, collection: localized_football_classes_select.reverse, selected: @team[:class_id]
  .actions
    = f.button :submit
