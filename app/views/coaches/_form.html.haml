= form_for @coach do |f|
  - if @coach.errors.any?
    #error_explanation
      %h2= "#{pluralize(@coach.errors.count, "error")} prohibited this coach from being saved:"
      %ul
        - @coach.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :surname
    = f.text_field :surname
  .field
    = f.label :givenname
    = f.text_field :givenname
  .field
    = f.label :birthday
    = f.datetime_select :birthday
  .field
    = f.label :picture
    = f.text_field :picture
  .actions
    = f.submit 'Save'
